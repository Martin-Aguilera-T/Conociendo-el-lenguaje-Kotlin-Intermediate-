// Te permiten a침adir funcionalidades a 
// clases existentes sin modificar su c칩digo original, 
// haciendo el c칩digo m치s limpio.

//Ejercicio 1
fun Int.isPositive(): Boolean=this>0

fun main() {
    println(1.isPositive())
    // true
}

//Ejercicio 2
fun String.toLowercaseString(): String=this.lowercase()

fun main() {
    println("Hello World!".toLowercaseString())
    // hello world!
}
